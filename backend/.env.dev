# 开发环境配置
DEBUG=true
DEVELOPMENT=true

# 数据库配置 - 使用PostgreSQL
DATABASE_URL=postgresql://weld_user:weld_password@localhost:5432/weld_db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=weld_db
DATABASE_USER=weld_user
DATABASE_PASSWORD=weld_password

# 服务器配置
HOST=localhost
PORT=8000

# JWT配置
SECRET_KEY=dev-secret-key-for-testing-purposes-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS配置 - 允许前端开发服务器
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000,http://127.0.0.1:3001

# Redis配置 - 可选，如果不使用Redis，某些功能会被禁用
REDIS_URL=redis://localhost:6379/0