# 开发环境配置
APP_NAME="Welding System Backend"
APP_VERSION="1.0.0"
DEBUG=true
DEVELOPMENT=true

# 服务器配置
HOST=localhost
PORT=8000

# 数据库配置
DATABASE_URL=postgresql://weld_user:weld_password@localhost:5432/weld_db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=weld_db
DATABASE_USER=weld_user
DATABASE_PASSWORD=weld_password

# Redis配置
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# JWT配置
SECRET_KEY=dev-secret-key-for-testing-purposes-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS配置
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:3001", "http://localhost:5173", "http://127.0.0.1:3000", "http://127.0.0.1:3001", "http://127.0.0.1:5173"]
ALLOWED_CREDENTIALS=true
ALLOWED_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
ALLOWED_HEADERS=["*"]

# 文件存储配置
UPLOAD_DIR=./storage/uploads
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_EXTENSIONS=[".jpg", ".jpeg", ".png", ".pdf", ".doc", ".docx", ".xls", ".xlsx"]

# 简化的邮件配置（开发环境）
SMTP_TLS_PORT=587
SMTP_SERVER="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL="noreply@yourdomain.com"
EMAILS_FROM_NAME="Welding System Dev"

# Celery配置
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_TASK_SERIALIZER="json"
CELERY_ACCEPT_CONTENT=["json"]
CELERY_TIMEZONE="Asia/Shanghai"

# API配置
API_V1_STR="/api/v1"
PROJECT_NAME="Welding System"
PROJECT_DESCRIPTION="焊接工艺管理系统API服务 - 开发环境"

# 安全配置
BCRYPT_ROUNDS=12
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# 监控配置
LOG_LEVEL=INFO

# 系统配置
TIMEZONE="Asia/Shanghai"
LOCALE="zh_CN"